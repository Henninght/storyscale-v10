# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Firebase Admin (Server-side only)
FIREBASE_ADMIN_PROJECT_ID=
FIREBASE_ADMIN_CLIENT_EMAIL=

# RECOMMENDED for Vercel: Use base64-encoded private key to avoid corruption
# Generate with: echo "YOUR_PRIVATE_KEY" | base64
# This prevents Node.js OpenSSL error:1E08010C:DECODER routines::unsupported
FIREBASE_ADMIN_PRIVATE_KEY_BASE64=

# ALTERNATIVE: Use raw private key (works locally, may fail on Vercel)
# Format: "-----BEGIN PRIVATE KEY-----\nYOUR_KEY_CONTENT\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_PRIVATE_KEY=

# Anthropic API
ANTHROPIC_API_KEY=

# OpenAI API (for DALL-E 3 image generation)
OPENAI_API_KEY=

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs
STRIPE_PRICE_ID_PRO=
STRIPE_PRICE_ID_ENTERPRISE=

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
